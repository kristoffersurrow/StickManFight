<Page x:Class="StickManFight.History"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StickManFight"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="515"
      Title="History">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="135*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="Header" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Fight History" VerticalAlignment="Center" Height="30" FontSize="20" FontWeight="Bold"/>

        <ScrollViewer Name="Scrollviewer" Grid.Row="1" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" VerticalAlignment="Top" Width="495">
            <TextBlock Name="Info" Text="" TextWrapping="WrapWithOverflow"/>
        </ScrollViewer>

        <Button Name="ReturnButton" Content="Return" Grid.Row="1" Margin="300,220,64.667,0" VerticalAlignment="Top" Width="150" Click="ReturnButton_Click"/>
        <Button Name="ClearHistoryButton" Content="Clear History" Grid.Row="1" Margin="75,220,289.667,0" VerticalAlignment="Top" Width="150" Click="ClearHistoryButton_Click"/>


    </Grid>
</Page>
